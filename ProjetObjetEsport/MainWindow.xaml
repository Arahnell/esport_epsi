<Window x:Class="ProjetObjetEsport.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <TextBlock Text="Tournois Hearthstone" Foreground="Blue" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
        <StackPanel>
            <Button Width="110" HorizontalAlignment="Center" Click="Button_Click" Style="{StaticResource RoundCorner}">
                <StackPanel>
                    <Image Source="card.png" Height="25" Width="32" />
                    <TextBlock Margin="5,0"><Run Text="Créer tournoi"/></TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>
    </StackPanel>
</Window>
